{
  "name": "vtypes-package",
  "version": "0.0.0",
  "description": "Additional rules / contraints for validate.js to address other common data patterns",
  "main": "packages/vtypes",
  "repository": "git@github.com:yeojz/vtypes.git",
  "author": "Gerald Yeo <contact@fusedthought.com>",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "node ./scripts/build-cli.js",
    "build:es5": "node ./scripts/build-cli.js --babel",
    "watch": "node ./scripts/watch-cli.js",
    "clean": "rimraf coverage validators.js register.js",
    "coverage": "jest --coverage",
    "coverage:upload": "codecov",
    "lint": "eslint --ext js src",
    "start": "npm run build && npm run bootstrap",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "validate",
    "validate.js",
    "validation",
    "validator",
    "object",
    "schema",
    "constraints"
  ],
  "jest": {
    "coverageDirectory": "./coverage/",
    "modulePaths": [
      "<rootDir>/packages/*"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "chokidar": "^1.7.0",
    "codecov": "^2.2.0",
    "eslint": "^4.0.0",
    "jest": "^20.0.4",
    "lerna": "^2.0.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.43.0",
    "rollup-plugin-alias": "^1.3.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "validate.js": "^0.11.1"
  }
}
